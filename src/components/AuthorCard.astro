---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  author: CollectionEntry<"authorsmetadata">;
}

const { author } = Astro.props;

const { name, avatar, twitter, linkedin, github, bio, subtitle } = author.data;
---

<div class="max-w-lg mx-auto my-10 bg-zinc-900 rounded-lg shadow-md p-5">
  <Image
    class="w-32 h-32 rounded-full mx-auto"
    src={avatar}
    alt="Profile picture"
    width={200}
    height={200}
  />
  <h2 class="text-center text-2xl font-semibold mt-3">{name}</h2>
  <p class="text-center text-gray-600 mt-1">{subtitle}</p>
  <div class="flex justify-center mt-5">
    <a href={twitter ?? "#"} class="text-blue-500 hover:text-blue-700 mx-3 cursor-pointer">Twitter</a>
    <a href={linkedin ?? "#"} class="text-blue-500 hover:text-blue-700 mx-3 cursor-pointer">LinkedIn</a>
    <a href={github ?? "#"} class="text-blue-500 hover:text-blue-700 mx-3 cursor-pointer">GitHub</a>
  </div>
  <div class="mt-5">
    <h3 class="text-xl font-semibold">Bio</h3>
    <p class="text-gray-900 mt-2">
      {bio}
    </p>

    <div class="flex justify-end">
      <a href={`/blog/${author.id}`}>Ver m√°s</a>
    </div>
  </div>
</div>
