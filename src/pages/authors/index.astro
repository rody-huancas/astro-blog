---
import { getCollection } from "astro:content";
import { siteConfig } from "src/config/site-config";
import MainLayout from "src/layouts/MainLayout.astro";
import AuthorCard from "src/components/AuthorCard.astro";

const authors = await getCollection("authorsmetadata");

---

<MainLayout title="Listado de Autores">
  <section class="bg-gray-900">
    <div class="container px-6 py-10 mx-auto">
      <h1
        class="text-3xl font-semibold text-gray-800 capitalize lg:text-4xl dark:text-white"
      >
        {siteConfig.title}
      </h1>

      <!-- author card -->
      <section class="grid sm:grid-cols-2 gap-2">
        {authors.map((author) => (
          <AuthorCard author={author} />
        ))}
      </section>
    </div>
  </section>
</MainLayout>
